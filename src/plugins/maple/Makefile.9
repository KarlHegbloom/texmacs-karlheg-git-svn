	chmod a+x $(TEXMACS_HOME_PATH)/bin/tm_maple_9.sh

$(TEXMACS_HOME_PATH)/bin/tm_maple_9: src.9/tm_maple_9.c
	$(CC) $(MAPLE_LDFLAGS) $(MAPLE_CPPFLAGS) src.9/tm_maple_9.c -o $(TEXMACS_HOME_PATH)/bin/tm_maple_9
