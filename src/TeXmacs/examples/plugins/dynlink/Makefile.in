tmsrc = @tmsrc@
CXX = g++
LD  = g++
RM  = rm -f

lib/libtmdynlink.so: src/dynlink.cpp
	$(CXX) -I$(tmsrc)/include -c src/dynlink.cpp -o src/dynlink.o
	$(LD) -shared -o lib/libtmdynlink.so src/dynlink.o

clean:
	$(RM) *~
	$(RM) */*~
	$(RM) */*.o
	$(RM) lib/*
