	$(RM) -r $(MANDRIVA_PACKAGE_DIR)/*/*/*/*/*/*/*/*/.svn
	cd $(MANDRIVA_PACKAGE_DIR)/$(tmdeb); make distclean
	cd $(MANDRIVA_PACKAGE_DIR); tar -czf $(tmdeb).tar.gz $(tmdeb) 
	# Moving Mandriva files
	mkdir -p ~/rpmbuild/{BUILD,RPMS,SOURCES,SPECS,SRPMS}
	if [ !-f ~/.rpmmacros ]; then \
	 echo '%_topdir %(echo $HOME)/rpmbuild' > ~/.rpmmacros; \
	fi
