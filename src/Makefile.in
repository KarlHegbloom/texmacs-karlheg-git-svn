	cd $(MANDRIVA_PACKAGE_DIR); $(CP) $(tmdeb).tar.gz $(HOME)/rpmbuild/SOURCES/.
	cd $(HOME); rpmbuild -ba rpmbuild/SPECS/TeXmacs.spec
