#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

export DH_ALWAYS_EXCLUDE=.git

DEB_CONFIGURE_OPTIONS := \
	'--enable-optimize="-O3 -ggdb -fexpensive-optimizations -fPIC"' \
        '--disable-fastalloc'

#	'--enable-QtPlugins=generic,imageformats,platforminputcontexts,platforms,printsupport,xcbglintegrations,styles,iconengines,platformthemes' \
#	'--enable-QtPlugins=generic,imageformats,platforminputcontexts,platforms,printsupport,xcbglintegrations,styles,iconengines,platformthemes,wayland-decoration-client,wayland-graphics-integration-client,wayland-shell-integration'

%:
	dh --parallel $@

override_dh_auto_configure:
	dh_auto_configure -- $(DEB_CONFIGURE_OPTIONS)

override_dh_strip:
	:
