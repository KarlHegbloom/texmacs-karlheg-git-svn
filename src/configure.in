case "$GUILE_VERSION" in
  1.0* | 1.1* | 1.2* | 1.3* | 1.4* | 1.5*)
    CONFIG_GUILE_SERIAL="A"
  ;;
  1.6* | 1.7*)
    CONFIG_GUILE_SERIAL="B"
  ;;
  *)
    CONFIG_GUILE_SERIAL="C"
  ;;
esac
